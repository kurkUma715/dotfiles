#!/bin/bash

bspc monitor DP-0 -d 1 2 3 4 5 6 7 8 9
bspc monitor HDMI-2 -d 10

bspc config border_width 2
bspc config window_gap 27
bspc config split_ratio 0.52
bspc config presel_feedback false
bspc config borderless_monocle true
bspc config gapless_monocle false
bspc config focus_follows_pointer true
bspc config top_padding 0
bspc config bottom_padding 0

bspc config focused_border_color "#ec86f0"
bspc config normal_border_color "#522c52"

bspc config active_border_color "#2e192e"
bspc config presel_feedback_color "#522c52"

bspc rule -a feh state=floating
bspc rule -a '*:qemu:*' state=floating
bspc rule -a OpenGL state=floating

~/.config/scripts/background.sh &
~/.config/scripts/settings.sh &

/usr/lib/xdg-desktop-portal &
/usr/lib/xdg-desktop-portal-gtk &

~/.config/scripts/screenlayout.sh &
~/.config/polybar/launch.sh &
sxhkd &

setxkbmap -option grp:alt_shift_toggle us,ru &
