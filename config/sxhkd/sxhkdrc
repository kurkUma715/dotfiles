# Main
super + Escape # Restart BSPWM
    bspc wm -r

super + r # Restart Config
    pkill -USR1 -x shkd

super + shift + Escape # Quit BSPWM
    bspc quit

# Restart polybar 
super + F10
    ~/.config/polybar/launch.sh


# Desktops movement
super + comma # Left
    bspc desktop -f prev

super + period # Right
    bspc desktop -f next


# Apps hotkeys
super + Return # Terminal
    alacritty

super + shift + w
    firefox

super + shift + d
    discord

super + shift + u
    unityhub

super + shift + c
    code

super + shift + e
    alacritty -e ranger


# Apps Menu
super + d
    rofi -show drun


# Windows Interact
super + q
    bspc node -c

super + m
    bspc node -t floating

super + shift + m
    bspc node -t tiled


# Changing Windows 
alt + Tab
    bspc node -f next.local

alt + shift + Tab
    bspc node -f prev.local


super + {1-9,0}
    bspc desktop -f ^{1-9,10}

super + shift + {1-9,0}
    bspc node -d ^{1-9,10}

# Separate windows
super + h
    bspc node -p west

super + j
    bspc node -p south

super + k
    bspc node -p north

super + l
    bspc node -p east

super + shift + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + ctrl + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + F11
    bspc node -t fullscreen


# Audio
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%


# Brightness
XF86MonBrightnessUp
    brightnessctl set +5%

XF86MonBrightnessDown
    brightnessctl set 5%-


# Screenshot
super + Print
    mkdir -p ~/Pictures/Screenshots/ && \
    scrot -b ~/Pictures/Screenshots/'%Y-%m-%d-%H%M%S_$wx$h.png'

super + shift + s
    mkdir -p ~/Pictures/Screenshots/ && \
    scrot -s -b ~/Pictures/Screenshots/'%Y-%m-%d-%H%M%S_$wx$h.png'
